{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["prettier", "node", "mocha", "security", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": 0,
    "mocha/no-exclusive-tests": "error",
    "class-methods-use-this": 0,
    "one-var":1
  },
  "extends": ["airbnb-base", "plugin:node/recommended", "plugin:security/recommended", "prettier", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}